@model Finance.Models.tblFirstLevel


@{
    ViewBag.Title = "First Level Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("FirstLevel", "FirstLevel", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>First Level Account</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.firstLevelId)

    <div class="form-group col-md-5">
        @Html.LabelFor(model => model.firstLevelAccount, htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.firstLevelAccount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.firstLevelAccount, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-5">
        @Html.LabelFor(model => model.firstLevelDesc, htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.firstLevelDesc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.firstLevelDesc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-2">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <label class=" alert-danger">@ViewBag.DuplicateMsg</label>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <label class=" alert-success">@ViewBag.SuccessMsg</label>
        </div>
    </div>


    <table class="table table-striped" style=" text-align:left;">
        <thead>
            <tr>
                <th style="width:30%;">
                    FIRST ACCOUNT
                </th>
                <th style="width:30%;">
                    DESCRIPTION
                </th>
                <th style="width:15%;">
                    ACTION
                </th>
            </tr>
        </thead>
        <tbody>
            @*@model IEnumerable<MvcWebApp.Models.tblFirstLevel>*@
            @foreach (var item in Model.FirstLevelDetails)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.firstLevelAccount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.firstLevelDesc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "FirstLevelEdit", new { id = item.firstLevelId }, new { @class = " btn btn-warning btn-mini" }) |

                        @Html.ActionLink("Delete", "FirstLevelDelete", new { id = item.firstLevelId }, new { @class = " btn btn-danger btn-mini" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
}


